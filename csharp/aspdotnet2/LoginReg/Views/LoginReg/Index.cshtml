@{
    ViewData["Title"] = "Home Page";
}
@model LoginReg.Models.User
 
<form asp-controller="LoginReg" asp-action="Index" method="post">
    <div class=row>
            <h2 class="col-xs-12 col-md-12  col-md-offset-2 ">Register</h2>
    </div>
    <label asp-for="FirstName" class="col-xs-12 col-md-2  "></label>
    <input asp-for="FirstName" class="col-xs-12 col-md-2"/><br><br>


    <label asp-for="LastName" class="col-xs-12 col-md-2"></label>
    <input asp-for="LastName" class="col-xs-12 col-md-3"/><br><br>


    <label asp-for="Email" class="col-xs-12 col-md-2"></label>
    <input asp-for="Email" class="col-xs-12 col-md-3"/><br><br>

    <label asp-for="Password" class="col-xs-12 col-md-2"></label>
    <input asp-for="Password" class="col-xs-12 col-md-2"/><br><br>
    <label asp-for="ConfirmPassword" class="col-xs-12 col-md-2"></label>
    <input asp-for="ConfirmPassword"class="col-xs-12 col-md-2"/><br><br>
    <button type="submit">Register</button>   
    <div asp-validation-summary="All"></div>

   
</form>
<br>

<br><br>
<form asp-controller="LoginReg" asp-action="Login" method="post">
     <div class=row>
            <h2 class="col-xs-12 col-md-12  col-md-offset-2 ">Login</h2>
    </div>
    <span asp-validation-for="Email"></span>
    <label asp-for="Email" class="col-xs-12 col-md-2"></label>
    <input asp-for="Email" class="col-xs-12 col-md-3"/><br><br>
    <span asp-validation-for="Password"></span>
    <label asp-for="Password" class="col-xs-12 col-md-2"></label>
    <input asp-for="Password" class="col-xs-12 col-md-2"/><br><br>
    
    <button type="submit">Login</button>
</form>


