@{
    ViewData["Title"] = "Log In / Registration";
}
@model userdashboard.Models.RegisterViewModel
<div class="ui container">
    <div id="registration_grid" class="ui equal wide grid">
        <div class="six wide column">
            <h1 style="font-family: 'Brush Script MT', cursive; font-size: 60px; text-align: center;">Project Title</h1>
            <div class="ui segment">
                <h1>Log In</h1>
                <form action="login" method="post" class="ui form">
                    <div class="field">
                        <label>Email</label>
                        <input type="email" name="Email" placeholder="Email" required>
                    </div>
                    <div class="field">
                        <label>Password</label>
                        <input type="password" name="Password" placeholder="Password" required>
                    </div>
                    <span class="error">@ViewBag.login_error</span>
                    <div>
                        <button class="ui primary button" type="submit">Log In</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="six wide column">
            <div class="ui segment">
                <h1>Registration</h1>
                <form asp-controller="Home" asp-action="register" method="post" class="ui form">
                    <div class="field">
                        <label>First Name</label>
                        <input asp-for="FirstName" type="text" name="FirstName" placeholder="Name">
                        <span class="error" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="field">
                        <label>Last Name</label>
                        <input asp-for="LastName" type="text" name="LastName" placeholder="Name">
                        <span class="error" asp-validation-for="LastName"></span>
                    </div>
                    <div class="field">
                        <label>Email</label>
                        <input asp-for="Email" type="email" name="Email" placeholder="Email">
                        <span class="error" asp-validation-for="Email"></span>
                    </div>
                    <div class="field">
                        <label>Password</label>
                        <input asp-for="Password" type="Password" name="Password" placeholder="Password">
                        <span class="error" asp-validation-for="Password"></span>
                    </div>
                    <div class="field">
                        <label>Password Confirm</label>
                        <input class="error" asp-for="Password_confirmation" type="password" name="Password_confirmation" placeholder="Password Confirm">
                        <span class="error" asp-validation-for="Password_confirmation"></span>
                    </div>
                    <span class="error">@ViewBag.reg_error</span>
                    <div>
                        <button class="ui primary button" type="submit">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>