<!doctype html>
<html>
    <head>
        <title>Random Keyword Generator</title>
        <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
        <script>
            $(document).ready(function(){
                
                $('button').click(function(){
                   console.log('hello');
                    $.get("generate", function(res) {
                           //console.log(res);
                           $('div p').html("Random Word ( attempt #" + res.count + " )")
                           $('div h2').html(res.passCode)
                            
                }, "json");

                })
                
            })
        </script>
    </head>
     <style>
            div {width: 1000px;
                height: 200px;
            } 

            .line{width: 1000px;
               text-align: center
            }            
            .keyword {
               font-family: Arial, Helvetica, sans-serif;   
               padding-left:50px;
               padding-right:50px;
               margin-left:350px;               
                              
            }
            
           p,h2{ border: 2px solid black; 
              padding:0px;
              width:200px;
              margin-left:400px; 
             
            } 
            
     </style>
    <body>
        <div class="line">
             <p>Random Word ( attempt #@ViewBag.count )</p>
             <h2 class="keyword">@ViewBag.passCode</h2>
             <button>Generate</button>
        </div>
    </body>
</html>